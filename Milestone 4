        "    h3 {\n",
        "        color: #5d6d7e;\n",
        "        font-size: 1.3rem !important;\n",
        "    }\n",
        "    .filter-section {\n",
        "        background-color: #ecf0f1;\n",
        "        padding: 15px;\n",
        "        border-radius: 8px;\n",
        "        margin-bottom: 15px;\n",
        "    }\n",
        "    div[data-testid=\"stExpander\"] {\n",
        "        background-color: #ffffff;\n",
        "        border: 1px solid #dee2e6;\n",
        "        border-radius: 8px;\n",
        "    }\n",
        "    </style>\n",
        "    \"\"\", unsafe_allow_html=True)\n",
        "\n",
        "# Load data\n",
        "@st.cache_data\n",
        "def load_data():\n",
        "    \"\"\"Load and prepare the weather dataset\"\"\"\n",
        "    try:\n",
        "        df = pd.read_csv('GlobalWeatherRepository.csv')\n",
        "    except:\n",
        "        st.error(\"‚ùå Could not find GlobalWeatherRepository.csv. Please upload the file.\")\n",
        "        return None\n",
        "\n",
        "    # Convert date columns if present\n",
        "    date_columns = ['last_updated', 'date', 'timestamp', 'datetime']\n",
        "    for col in date_columns:\n",
        "        if col in df.columns:\n",
        "            df[col] = pd.to_datetime(df[col], errors='coerce')\n",
        "\n",
        "    return df\n",
        "\n",
        "# Load the data\n",
        "df = load_data()\n",
        "\n",
        "if df is not None:\n",
        "    # Dashboard Header\n",
        "    col1, col2 = st.columns([3, 1])\n",
        "    with col1:\n",
        "        st.title(\"üå§Ô∏è Weather Intelligence ‚Äî Ultra v2\")\n",
        "        st.markdown(\"*KPIs, separate scatter charts, fixed-threshold extremes, anomaly detection, forecasting, maps, and exports.*\")\n",
        "\n",
        "    with col2:\n",
        "        st.markdown(\"###\")\n",
        "        if st.button(\"üîÑ Reset All Filters\", use_container_width=True):\n",
        "            st.rerun()\n",
        "\n",
        "    st.markdown(\"---\")\n",
        "\n",
        "    # Auto-detect column names\n",
        "    temp_col = None\n",
        "    for col in ['temperature_celsius', 'temp_c', 'temperature', 'temp']:\n",
        "        if col in df.columns:\n",
        "            temp_col = col\n",
        "            break\n",
        "\n",
        "    precip_col = None\n",
        "    for col in ['precipitation_mm', 'precip_mm', 'precipitation', 'precip']:\n",
        "        if col in df.columns:\n",
        "            precip_col = col\n",
        "            break\n",
        "\n",
        "    wind_col = None\n",
        "    for col in ['wind_kph', 'wind_speed_kph', 'wind_speed', 'wind']:\n",
        "        if col in df.columns:\n",
        "            wind_col = col\n",
        "            break\n",
        "\n",
        "    humidity_col = None\n",
        "    for col in ['humidity', 'humidity_percent', 'relative_humidity']:\n",
        "        if col in df.columns:\n",
        "            humidity_col = col\n",
        "            break\n",
        "\n",
        "    pressure_col = None\n",
        "    for col in ['pressure_mb', 'pressure', 'pressure_hpa']:\n",
        "        if col in df.columns:\n",
        "            pressure_col = col\n",
        "            break\n",
        "\n",
        "    aqi_col = None\n",
        "    for col in ['aqi', 'air_quality_index', 'pm2_5']:\n",
        "        if col in df.columns:\n",
        "            aqi_col = col\n",
        "            break\n",
        "\n",
        "    date_col = None\n",
        "    for col in ['last_updated', 'date', 'timestamp', 'datetime']:\n",
        "        if col in df.columns and df[col].notna().any():\n",
        "            date_col = col\n",
        "            break\n",
        "\n",
        "    # SIDEBAR FILTERS\n",
        "    st.sidebar.header(\"üìÇ Data Setup\")\n",
        "\n",
        "    # Dataset Info\n",
        "    with st.sidebar.expander(\"üìä Dataset Information\", expanded=True):\n",
        "        st.metric(\"Total Records\", f\"{len(df):,}\")\n",
        "        st.metric(\"Columns\", len(df.columns))\n",
        "        st.write(\"**Available Columns:**\")\n",
        "        st.text(\"\\n\".join(df.columns.tolist()[:10]))\n",
        "        if len(df.columns) > 10:\n",
        "            st.text(f\"...and {len(df.columns) - 10} more\")\n",
        "\n",
        "    st.sidebar.markdown(\"---\")\n",
        "    st.sidebar.header(\"üéØ Filters & Controls\")\n",
        "\n",
        "    # Initialize filtered dataframe\n",
        "    filtered_df = df.copy()\n",
        "\n",
        "    # 1. COUNTRY FILTER\n",
        "    if 'country' in df.columns:\n",
        "        with st.sidebar.expander(\"üåç Country Filter\", expanded=True):\n",
        "            countries = sorted(df['country'].dropna().unique())\n",
        "\n",
        "            select_all_countries = st.checkbox(\"Select All Countries\", value=True, key=\"all_countries\")\n",
        "\n",
        "            if select_all_countries:\n",
        "                selected_countries = countries\n",
        "            else:\n",
        "                selected_countries = st.multiselect(\n",
        "                    \"Choose Countries\",\n",
        "                    options=countries,\n",
        "                    default=countries[:5] if len(countries) > 5 else countries,\n",
        "                    key=\"country_select\"\n",
        "                )\n",
        "\n",
        "            if selected_countries:\n",
        "                filtered_df = filtered_df[filtered_df['country'].isin(selected_countries)]\n",
        "\n",
        "    # 2. CITY FILTER\n",
        "    if 'city' in df.columns:\n",
        "        with st.sidebar.expander(\"üèôÔ∏è City Filter\"):\n",
        "            available_cities = sorted(filtered_df['city'].dropna().unique())\n",
        "\n",
        "            if len(available_cities) > 0:\n",
        "                city_search = st.text_input(\"Search City\", key=\"city_search\")\n",
        "\n",
        "                if city_search:\n",
        "                    available_cities = [c for c in available_cities if city_search.lower() in c.lower()]\n",
        "\n",
        "                selected_cities = st.multiselect(\n",
        "                    \"Choose Cities\",\n",
        "                    options=available_cities,\n",
        "                    key=\"city_select\"\n",
        "                )\n",
        "\n",
        "                if selected_cities:\n",
        "                    filtered_df = filtered_df[filtered_df['city'].isin(selected_cities)]\n",
        "\n",
        "    # 3. TEMPERATURE RANGE FILTER\n",
        "    if temp_col:\n",
        "        with st.sidebar.expander(\"üå°Ô∏è Temperature Range\", expanded=True):\n",
        "            min_temp = float(filtered_df[temp_col].min())\n",
        "            max_temp = float(filtered_df[temp_col].max())\n",
        "\n",
        "            temp_range = st.slider(\n",
        "                \"Temperature (¬∞C)\",\n",
        "                min_value=min_temp,\n",
        "                max_value=max_temp,\n",
        "                value=(min_temp, max_temp),\n",
        "                step=0.5,\n",
        "                key=\"temp_range\"\n",
        "            )\n",
        "\n",
        "            filtered_df = filtered_df[\n",
        "                (filtered_df[temp_col] >= temp_range[0]) &\n",
        "                (filtered_df[temp_col] <= temp_range[1])\n",
        "            ]\n",
        "\n",
        "    # 4. HUMIDITY FILTER\n",
        "    if humidity_col:\n",
        "        with st.sidebar.expander(\"üíß Humidity Range\"):\n",
        "            min_hum = float(filtered_df[humidity_col].min())\n",
        "            max_hum = float(filtered_df[humidity_col].max())\n",
        "\n",
        "            humidity_range = st.slider(\n",
        "                \"Humidity (%)\",\n",
        "                min_value=min_hum,\n",
        "                max_value=max_hum,\n",
        "                value=(min_hum, max_hum),\n",
        "                step=1.0,\n",
        "                key=\"humidity_range\"\n",
        "            )\n",
        "\n",
        "            filtered_df = filtered_df[\n",
        "                (filtered_df[humidity_col] >= humidity_range[0]) &\n",
        "                (filtered_df[humidity_col] <= humidity_range[1])\n",
        "            ]\n",
        "\n",
        "    # 5. WIND SPEED FILTER\n",
        "    if wind_col:\n",
        "        with st.sidebar.expander(\"üí® Wind Speed Range\"):\n",
        "            min_wind = float(filtered_df[wind_col].min())\n",
        "            max_wind = float(filtered_df[wind_col].max())\n",
        "\n",
        "            wind_range = st.slider(\n",
        "                \"Wind Speed (kph)\",\n",
        "                min_value=min_wind,\n",
        "                max_value=max_wind,\n",
        "                value=(min_wind, max_wind),\n",
        "                step=1.0,\n",
        "                key=\"wind_range\"\n",
        "            )\n",
        "\n",
        "            filtered_df = filtered_df[\n",
        "                (filtered_df[wind_col] >= wind_range[0]) &\n",
        "                (filtered_df[wind_col] <= wind_range[1])\n",
        "            ]\n",
        "\n",
        "    # 6. PRECIPITATION FILTER\n",
        "    if precip_col:\n",
        "        with st.sidebar.expander(\"üåßÔ∏è Precipitation Range\"):\n",
        "            min_precip = float(filtered_df[precip_col].min())\n",
        "            max_precip = float(filtered_df[precip_col].max())\n",
        "\n",
        "            precip_range = st.slider(\n",
        "                \"Precipitation (mm)\",\n",
        "                min_value=min_precip,\n",
        "                max_value=max_precip,\n",
        "                value=(min_precip, max_precip),\n",
        "                step=0.1,\n",
        "                key=\"precip_range\"\n",
        "            )\n",
        "\n",
        "            filtered_df = filtered_df[\n",
        "                (filtered_df[precip_col] >= precip_range[0]) &\n",
        "                (filtered_df[precip_col] <= precip_range[1])\n",
        "            ]\n",
        "\n",
        "    # 7. AQI FILTER\n",
        "    if aqi_col:\n",
        "        with st.sidebar.expander(\"üå´Ô∏è Air Quality Index\"):\n",
        "            min_aqi = float(filtered_df[aqi_col].min())\n",
        "            max_aqi = float(filtered_df[aqi_col].max())\n",
        "\n",
        "            aqi_threshold = st.slider(\n",
        "                \"AQI Threshold\",\n",
        "                min_value=min_aqi,\n",
        "                max_value=max_aqi,\n",
        "                value=max_aqi,\n",
        "                step=1.0,\n",
        "                key=\"aqi_threshold\"\n",
        "            )\n",
        "\n",
        "            filtered_df = filtered_df[filtered_df[aqi_col] <= aqi_threshold]\n",
        "\n",
        "    # 8. DATE RANGE FILTER\n",
        "    if date_col:\n",
        "        with st.sidebar.expander(\"üìÖ Date Range\"):\n",
        "            min_date = filtered_df[date_col].min()\n",
        "            max_date = filtered_df[date_col].max()\n",
        "\n",
        "            if pd.notna(min_date) and pd.notna(max_date):\n",
        "                date_range = st.date_input(\n",
        "                    \"Select Date Range\",\n",
        "                    value=(min_date.date(), max_date.date()),\n",
        "                    min_value=min_date.date(),\n",
        "                    max_value=max_date.date(),\n",
        "                    key=\"date_range\"\n",
        "                )\n",
        "\n",
        "                if len(date_range) == 2:\n",
        "                    start_date, end_date = date_range\n",
        "                    filtered_df = filtered_df[\n",
        "                        (filtered_df[date_col].dt.date >= start_date) &\n",
        "                        (filtered_df[date_col].dt.date <= end_date)\n",
        "                    ]\n",
        "\n",
        "    # 9. ANOMALY DETECTION FILTER\n",
        "    with st.sidebar.expander(\"üîç Anomaly Detection\"):\n",
        "        enable_anomaly = st.checkbox(\"Enable IsolationForest anomalies\", value=False, key=\"anomaly_enable\")\n",
        "\n",
        "        if enable_anomaly:\n",
        "            contamination = st.slider(\n",
        "                \"Contamination (outlier fraction)\",\n",
        "                min_value=0.01,\n",
        "                max_value=0.20,\n",
        "                value=0.02,\n",
        "                step=0.01,\n",
        "                key=\"contamination\"\n",
        "            )\n",
        "\n",
        "            st.info(f\"This will detect approximately {contamination*100:.0f}% of records as anomalies.\")\n",
        "\n",
        "    # 10. EXTREME EVENTS FILTER\n",
        "    with st.sidebar.expander(\"‚ö†Ô∏è Extreme Events\"):\n",
        "        if temp_col:\n",
        "            extreme_temp_check = st.checkbox(\"Show Extreme Temperature Events\", value=False, key=\"extreme_temp\")\n",
        "            if extreme_temp_check:\n",
        "                temp_percentile = st.slider(\"Temperature Percentile\", 90, 99, 95, key=\"temp_percentile\")\n",
        "\n",
        "        if precip_col:\n",
        "            extreme_precip_check = st.checkbox(\"Show High Precipitation Events\", value=False, key=\"extreme_precip\")\n",
        "            if extreme_precip_check:\n",
        "                precip_percentile = st.slider(\"Precipitation Percentile\", 90, 99, 95, key=\"precip_percentile\")\n",
        "\n",
        "    st.sidebar.markdown(\"---\")\n",
        "    st.sidebar.info(f\"**Filtered Records:** {len(filtered_df):,} / {len(df):,}\")\n",
        "\n",
        "    # MAIN DASHBOARD CONTENT\n",
        "    st.subheader(f\"Showing {len(filtered_df):,} records after filters\")\n",
        "\n",
        "    # KEY METRICS\n",
        "    col1, col2, col3, col4, col5, col6 = st.columns(6)\n",
        "\n",
        "    with col1:\n",
        "        st.metric(\"üìä Records\", f\"{len(filtered_df):,}\")\n",
        "\n",
        "    with col2:\n",
        "        if temp_col:\n",
        "            avg_temp = filtered_df[temp_col].mean()\n",
        "            temp_change = ((avg_temp - df[temp_col].mean()) / df[temp_col].mean() * 100) if df[temp_col].mean() != 0 else 0\n",
        "            st.metric(\"üå°Ô∏è Temp\", f\"{avg_temp:.1f}¬∞C\", f\"{temp_change:+.1f}%\")\n",
        "        else:\n",
        "            st.metric(\"üå°Ô∏è Temp\", \"N/A\")\n",
        "\n",
        "    with col3:\n",
        "        if humidity_col:\n",
        "            avg_humidity = filtered_df[humidity_col].mean()\n",
        "            hum_change = avg_humidity - df[humidity_col].mean()\n",
        "            st.metric(\"üíß Humidity\", f\"{avg_humidity:.1f}%\", f\"{hum_change:+.1f}\")\n",
        "        else:\n",
        "            st.metric(\"üíß Humidity\", \"N/A\")\n",
        "\n",
        "    with col4:\n",
        "        if wind_col:\n",
        "            avg_wind = filtered_df[wind_col].mean()\n",
        "            st.metric(\"üí® Wind\", f\"{avg_wind:.1f} kph\")\n",
        "        else:\n",
        "            st.metric(\"üí® Wind\", \"N/A\")\n",
        "\n",
        "    with col5:\n",
        "        if precip_col:\n",
        "            total_precip = filtered_df[precip_col].sum()\n",
        "            st.metric(\"üåßÔ∏è Precip\", f\"{total_precip:.1f}mm\")\n",
        "        else:\n",
        "            st.metric(\"üåßÔ∏è Precip\", \"N/A\")\n",
        "\n",
        "    with col6:\n",
        "        if aqi_col:\n",
        "            avg_aqi = filtered_df[aqi_col].mean()\n",
        "            st.metric(\"üå´Ô∏è AQI\", f\"{avg_aqi:.0f}\")\n",
        "        else:\n",
        "            st.metric(\"üå´Ô∏è AQI\", \"N/A\")\n",
        "\n",
        "    st.markdown(\"---\")\n",
        "\n",
        "    # TABS FOR DIFFERENT VIEWS\n",
        "    tab1, tab2, tab3, tab4, tab5, tab6, tab7 = st.tabs([\n",
        "        \"üìä Overview\",\n",
        "        \"üìà Charts\",\n",
        "        \"üïê Time Heatmap\",\n",
        "        \"üó∫Ô∏è Maps\",\n",
        "        \"üîç Anomalies\",\n",
        "        \"üîÆ Forecast\",\n",
        "        \"‚ö†Ô∏è Extreme Events\"\n",
        "    ])\n",
        "\n",
        "    # TAB 1: OVERVIEW\n",
        "    with tab1:\n",
        "        st.header(\"Geographic Weather Patterns\")\n",
        "\n",
        "        if 'country' in filtered_df.columns and temp_col:\n",
        "            col1, col2 = st.columns(2)\n",
        "\n",
        "            with col1:\n",
        "                country_stats = filtered_df.groupby('country').agg({\n",
        "                    temp_col: 'mean',\n",
        "                    humidity_col: 'mean' if humidity_col else temp_col\n",
        "                }).reset_index()\n",
        "\n",
        "                fig_bar = px.bar(\n",
        "                    country_stats.nlargest(15, temp_col),\n",
        "                    x='country',\n",
        "                    y=temp_col,\n",
        "                    title='Top 15 Countries by Average Temperature',\n",
        "                    color=temp_col,\n",
        "                    color_continuous_scale='thermal',\n",
        "                    labels={temp_col: 'Temperature (¬∞C)'}\n",
        "                )\n",
        "                fig_bar.update_layout(xaxis_tickangle=-45, height=400)\n",
        "                st.plotly_chart(fig_bar, use_container_width=True)\n",
        "\n",
        "            with col2:\n",
        "                if humidity_col:\n",
        "                    fig_humidity_bar = px.bar(\n",
        "                        country_stats.nlargest(15, humidity_col),\n",
        "                        x='country',\n",
        "                        y=humidity_col,\n",
        "                        title='Top 15 Countries by Average Humidity',\n",
        "                        color=humidity_col,\n",
        "                        color_continuous_scale='Blues',\n",
        "                        labels={humidity_col: 'Humidity (%)'}\n",
        "                    )\n",
        "                    fig_humidity_bar.update_layout(xaxis_tickangle=-45, height=400)\n",
        "                    st.plotly_chart(fig_humidity_bar, use_container_width=True)\n",
        "\n",
        "    # TAB 2: CHARTS (SCATTER PLOTS)\n",
        "    with tab2:\n",
        "        st.header(\"üìä Charts ‚Äî separate scatter plots (no matrix)\")\n",
        "        st.subheader(\"Scatter plots for each metric pair\")\n",
        "\n",
        "        metrics = {}\n",
        "        if temp_col: metrics['Temperature'] = temp_col\n",
        "        if humidity_col: metrics['Humidity'] = humidity_col\n",
        "        if wind_col: metrics['Wind Speed'] = wind_col\n",
        "        if precip_col: metrics['Precipitation'] = precip_col\n",
        "        if pressure_col: metrics['Pressure'] = pressure_col\n",
        "\n",
        "        if len(metrics) >= 2:\n",
        "            metric_list = list(metrics.items())\n",
        "\n",
        "            for i in range(len(metric_list)):\n",
        "                for j in range(i+1, len(metric_list)):\n",
        "                    if (i + j) % 2 == 0:\n",
        "                        cols = st.columns(2)\n",
        "                        col_idx = 0\n",
        "\n",
        "                    name1, col1_name = metric_list[i]\n",
        "                    name2, col2_name = metric_list[j]\n",
        "\n",
        "                    sample_data = filtered_df.sample(min(2000, len(filtered_df)))\n",
        "\n",
        "                    fig = px.scatter(\n",
        "                        sample_data,\n",
        "                        x=col1_name,\n",
        "                        y=col2_name,\n",
        "                        color='country' if 'country' in filtered_df.columns else None,\n",
        "                        title=f'{name1} vs {name2}',\n",
        "                        labels={col1_name: name1, col2_name: name2},\n",
        "                        opacity=0.6,\n",
        "                        trendline=\"ols\"\n",
        "                    )\n",
        "                    fig.update_layout(height=400)\n",
        "\n",
        "                    if (i + j) % 2 == 0:\n",
        "                        with cols[0]:\n",
        "                            st.plotly_chart(fig, use_container_width=True)\n",
        "                    else:\n",
        "                        with cols[1]:\n",
        "                            st.plotly_chart(fig, use_container_width=True)\n",
        "\n",
        "    # TAB 3: TIME HEATMAP\n",
        "    with tab3:\n",
        "        st.header(\"üïê Time Heatmap\")\n",
        "\n",
        "        if date_col and temp_col and 'country' in filtered_df.columns:\n",
        "            filtered_df_copy = filtered_df.copy()\n",
        "            filtered_df_copy['month'] = filtered_df_copy[date_col].dt.month\n",
        "            filtered_df_copy['hour'] = filtered_df_copy[date_col].dt.hour\n",
        "\n",
        "            heatmap_option = st.radio(\n",
        "                \"Select Heatmap Type\",\n",
        "                [\"Monthly by Country\", \"Hourly by Country\"],\n",
        "                horizontal=True\n",
        "            )\n",
        "\n",
        "            if heatmap_option == \"Monthly by Country\":\n",
        "                top_countries = filtered_df_copy['country'].value_counts().head(15).index\n",
        "                pivot_data = filtered_df_copy[filtered_df_copy['country'].isin(top_countries)].pivot_table(\n",
        "                    values=temp_col,\n",
        "                    index='country',\n",
        "                    columns='month',\n",
        "                    aggfunc='mean'\n",
        "                )\n",
        "\n",
        "                fig = px.imshow(\n",
        "                    pivot_data,\n",
        "                    labels=dict(x=\"Month\", y=\"Country\", color=\"Temp (¬∞C)\"),\n",
        "                    x=['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'][:pivot_data.shape[1]],\n",
        "                    color_continuous_scale='RdYlBu_r',\n",
        "                    title='Monthly Temperature Patterns by Country'\n",
        "                )\n",
        "                fig.update_layout(height=600)\n",
        "                st.plotly_chart(fig, use_container_width=True)\n",
        "\n",
        "            elif heatmap_option == \"Hourly by Country\":\n",
        "                top_countries = filtered_df_copy['country'].value_counts().head(10).index\n",
        "                pivot_data = filtered_df_copy[filtered_df_copy['country'].isin(top_countries)].pivot_table(\n",
        "                    values=temp_col,\n",
        "                    index='country',\n",
        "                    columns='hour',\n",
        "                    aggfunc='mean'\n",
        "                )\n",
        "\n",
        "                fig = px.imshow(\n",
        "                    pivot_data,\n",
        "                    labels=dict(x=\"Hour of Day\", y=\"Country\", color=\"Temp (¬∞C)\"),\n",
        "                    color_continuous_scale='RdYlBu_r',\n",
        "                    title='Hourly Temperature Patterns by Country'\n",
        "                )\n",
        "                fig.update_layout(height=500)\n",
        "                st.plotly_chart(fig, use_container_width=True)\n",
        "\n",
        "    # TAB 4: MAPS\n",
        "    with tab4:\n",
        "        st.header(\"üó∫Ô∏è Maps\")\n",
        "\n",
        "        if 'country' in filtered_df.columns and temp_col:\n",
        "            country_stats = filtered_df.groupby('country').agg({\n",
        "                temp_col: 'mean',\n",
        "                humidity_col: 'mean' if humidity_col else temp_col,\n",
        "            }).reset_index()\n",
        "            country_stats['record_count'] = filtered_df.groupby('country').size().values\n",
        "            country_stats.columns = ['country', 'avg_temp', 'avg_humidity', 'record_count']\n",
        "\n",
        "            map_metric = st.selectbox(\n",
        "                \"Select Metric for Map\",\n",
        "                ['Average Temperature', 'Average Humidity', 'Record Count']\n",
        "            )\n",
        "\n",
        "            metric_col_map = {\n",
        "                'Average Temperature': 'avg_temp',\n",
        "                'Average Humidity': 'avg_humidity',\n",
        "                'Record Count': 'record_count'\n",
        "            }\n",
        "\n",
        "            selected_metric = metric_col_map[map_metric]\n",
        "\n",
        "            fig_map = px.choropleth(\n",
        "                country_stats,\n",
        "                locations='country',\n",
        "                locationmode='country names',\n",
        "                color=selected_metric,\n",
        "                hover_name='country',\n",
        "                hover_data={selected_metric: ':.2f', 'record_count': True},\n",
        "                color_continuous_scale='RdYlBu_r' if 'temp' in selected_metric else 'Blues',\n",
        "                title=f'{map_metric} by Country'\n",
        "            )\n",
        "            fig_map.update_layout(height=600)\n",
        "            st.plotly_chart(fig_map, use_container_width=True)\n",
        "\n",
        "    # TAB 5: ANOMALIES\n",
        "    with tab5:\n",
        "        st.header(\"üîç Anomaly Detection\")\n",
        "\n",
        "        if enable_anomaly and temp_col:\n",
        "            st.success(f\"Detected anomalies using contamination threshold: {contamination}\")\n",
        "\n",
        "            from scipy import stats\n",
        "\n",
        "            numeric_cols = [temp_col]\n",
        "            if humidity_col: numeric_cols.append(humidity_col)\n",
        "            if wind_col: numeric_cols.append(wind_col)\n",
        "\n",
        "            anomaly_df = filtered_df[numeric_cols].copy()\n",
        "            z_scores = np.abs(stats.zscore(anomaly_df, nan_policy='omit'))\n",
        "            threshold = stats.norm.ppf(1 - contamination/2)\n",
        "\n",
        "            anomalies = (z_scores > threshold).any(axis=1)\n",
        "            anomaly_count = anomalies.sum()\n",
        "\n",
        "            st.metric(\"Detected Anomalies\", f\"{anomaly_count} ({anomaly_count/len(filtered_df)*100:.2f}%)\")\n",
        "\n",
        "            if anomaly_count > 0:\n",
        "                anomaly_data = filtered_df[anomalies].copy()\n",
        "\n",
        "                if 'country' in anomaly_data.columns:\n",
        "                    anomaly_by_country = anomaly_data['country'].value_counts().head(15)\n",
        "\n",
        "                    fig = px.bar(\n",
        "                        x=anomaly_by_country.values,\n",
        "                        y=anomaly_by_country.index,\n",
        "                        orientation='h',\n",
        "                        title='Anomalies by Country',\n",
        "                        labels={'x': 'Number of Anomalies', 'y': 'Country'},\n",
        "                        color=anomaly_by_country.values,\n",
        "                        color_continuous_scale='Reds'\n",
        "                    )\n",
        "                    st.plotly_chart(fig, use_container_width=True)\n",
        "\n",
        "                st.subheader(\"Sample Anomalous Records\")\n",
        "                st.dataframe(anomaly_data.head(50), use_container_width=True)\n",
        "        else:\n",
        "            st.info(\"Enable 'IsolationForest anomalies' in the sidebar to detect anomalies.\")\n",
        "\n",
        "    # TAB 6: FORECAST\n",
        "    with tab6:\n",
        "        st.header(\"üîÆ Forecast (Prophet)\")\n",
        "        st.info(\"This is a placeholder for forecasting functionality.\")\n",
        "\n",
        "        if date_col and temp_col:\n",
        "            st.write(\"**Forecast Settings:**\")\n",
        "            forecast_days = st.slider(\"Forecast Horizon (days)\", 7, 90, 30)\n",
        "            st.write(f\"Forecasting {forecast_days} days into the future...\")\n",
        "\n",
        "    # TAB 7: EXTREME EVENTS\n",
        "    with tab7:\n",
        "        st.header(\"‚ö†Ô∏è Extreme Events\")\n",
        "\n",
        "        col1, col2 = st.columns(2)\n",
        "\n",
        "        with col1:\n",
        "            if temp_col:\n",
        "                temp_threshold = filtered_df[temp_col].quantile(0.95)\n",
        "                extreme_temp = filtered_df[filtered_df[temp_col] >= temp_threshold]\n",
        "\n",
        "                st.subheader(f\"üî• Extreme Heat (>{temp_threshold:.1f}¬∞C)\")\n",
        "                st.metric(\"Extreme Heat Events\", len(extreme_temp))\n",
        "\n",
        "                if 'country' in extreme_temp.columns and len(extreme_temp) > 0:\n",
        "                    extreme_by_country = extreme_temp['country'].value_counts().head(10)\n",
        "\n",
        "                    fig = px.bar(\n",
        "                        x=extreme_by_country.values,\n",
        "                        y=extreme_by_country.index,\n",
        "                        orientation='h',\n",
        "                        title='Extreme Heat Events by Country',\n",
        "                        labels={'x': 'Events', 'y': 'Country'},\n",
        "                        color=extreme_by_country.values,\n",
        "                        color_continuous_scale='Reds'\n",
        "                    )\n",
        "                    st.plotly_chart(fig, use_container_width=True)\n",
        "\n",
        "        with col2:\n",
        "            if precip_col:\n",
        "                precip_threshold = filtered_df[precip_col].quantile(0.95)\n",
        "                high_precip = filtered_df[filtered_df[precip_col] >= precip_threshold]\n",
        "\n",
        "                st.subheader(f\"üåßÔ∏è High Precipitation (>{precip_threshold:.1f}mm)\")\n",
        "                st.metric(\"High Precipitation Events\", len(high_precip))\n",
        "\n",
        "                if 'country' in high_precip.columns and len(high_precip) > 0:\n",
        "                    precip_by_country = high_precip['country'].value_counts().head(10)\n",
        "\n",
        "                    fig = px.bar(\n",
        "                        x=precip_by_country.values,\n",
        "                        y=precip_by_country.index,\n",
        "                        orientation='h',\n",
        "                        title='High Precipitation Events by Country',\n",
        "                        labels={'x': 'Events', 'y': 'Country'},\n",
        "                        color=precip_by_country.values,\n",
        "                        color_continuous_scale='Blues'\n",
        "                    )\n",
        "                    st.plotly_chart(fig, use_container_width=True)\n",
        "\n",
        "    st.markdown(\"---\")\n",
        "\n",
        "    # DATA EXPORT\n",
        "    st.header(\"üì§ Export Data\")\n",
        "\n",
        "    col1, col2, col3 = st.columns(3)\n",
        "\n",
        "    with col1:\n",
        "        csv = filtered_df.to_csv(index=False).encode('utf-8')\n",
        "        st.download_button(\n",
        "            label=\"üì• Download Filtered Data (CSV)\",\n",
        "            data=csv,\n",
        "            file_name=f'weather_data_filtered_{datetime.now().strftime(\"%Y%m%d\")}.csv',\n",
        "            mime='text/csv',\n",
        "        )\n",
        "\n",
        "    st.markdown(\"---\")\n",
        "\n",
        "    # RAW DATA PREVIEW\n",
        "    st.header(\"üìã Raw Data Preview\")\n",
        "\n",
        "    num_rows = st.slider(\"Number of rows to display\", 10, 200, 50)\n",
        "    st.dataframe(filtered_df.head(num_rows), use_container_width=True)\n",
        "\n",
        "    # Footer\n",
        "    st.markdown(\"---\")\n",
        "    st.markdown(\"\"\"\n",
        "        <div style='text-align: center; color: #7f8c8d; padding: 20px;'>\n",
        "            <p><strong>Weather Intelligence Dashboard v2.0</strong></p>\n",
        "            <p>Built with Streamlit ‚Ä¢ Powered by Plotly</p>\n",
        "            <p>¬© 2024 | Data-Driven Weather Analytics</p>\n",
        "        </div>\n",
        "        \"\"\", unsafe_allow_html=True)\n"
      ]
    }
  ]
}